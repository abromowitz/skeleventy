---
layout: default
meta_title: Blog
meta_description: Blog page description
body_class: blog
title: Blog
---

<main id="main" class="main inner flex flex-1 flex-col py-10 lg:py-20 focus:outline-none" tabindex="-1">

    <section id="container-centre" class="column centre flex-1" aria-label="Blogs">

            <h1 class="page-title text-3xl sm:text-5xl">{{ title }}</h1>
            {% for post in collections.blog %}
            
                <h2 class="md:text-2xl mb-2"><a  href="{{ post.url }}">{{ post.data.title }}</a></h2>
                <div class="text-sm md:text-xl text-gray-600 md:flex mb-4">
                    <time datetime="{{ post.date }}">
                        {{ post.date | dateDisplay }}
                    </time>
                </div>    

            {% endfor %}
 
        </div>

    </section>

</main>


